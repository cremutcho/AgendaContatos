@model AgendaContatos.Models.Contato

<div class="card shadow-lg p-4">
    <h2 class="fw-bold text-info mb-4">
        <i class="bi bi-eye"></i> Detalhes do Contato
    </h2>

    <dl class="row">
        <dt class="col-sm-3 fw-bold">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3 fw-bold">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3 fw-bold">Telefone</dt>
        <dd class="col-sm-9">@Model.Telefone</dd>

        <dt class="col-sm-3 fw-bold">Endere√ßo</dt>
        <dd class="col-sm-9">@Model.Endereco</dd>

        <dt class="col-sm-3 fw-bold">Cidade</dt>
        <dd class="col-sm-9">@Model.Cidade</dd>

        <dt class="col-sm-3 fw-bold">Sexo</dt>
        <dd class="col-sm-9">@Model.Sexo</dd>

        <dt class="col-sm-3 fw-bold">Data Nascimento</dt>
        <dd class="col-sm-9">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>
    </dl>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</div>
