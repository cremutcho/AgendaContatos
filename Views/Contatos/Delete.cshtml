@model AgendaContatos.Models.Contato

<div class="card shadow-lg p-4">
    <h2 class="fw-bold text-danger mb-4">
        <i class="bi bi-trash"></i> Excluir Contato
    </h2>

    <p class="mb-3">Tem certeza que deseja excluir este contato?</p>

    <dl class="row">
        <dt class="col-sm-3 fw-bold">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3 fw-bold">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3 fw-bold">Telefone</dt>
        <dd class="col-sm-9">@Model.Telefone</dd>

        <dt class="col-sm-3 fw-bold">Endereço</dt>
        <dd class="col-sm-9">@Model.Endereco</dd>

        <dt class="col-sm-3 fw-bold">Cidade</dt>
        <dd class="col-sm-9">@Model.Cidade</dd>

        <dt class="col-sm-3 fw-bold">Sexo</dt>
        <dd class="col-sm-9">@Model.Sexo</dd>

        <dt class="col-sm-3 fw-bold">Data Nascimento</dt>
        <dd class="col-sm-9">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-check-circle"></i> Confirmar Exclusão
            </button>
        </div>
    </form>
</div>
