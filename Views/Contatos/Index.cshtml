@model IEnumerable<AgendaContatos.Models.Contato>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-primary">ðŸ“’ Lista de Contatos</h2>
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-person-plus"></i> Novo Contato
    </a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>EndereÃ§o</th>
            <th>Cidade</th>
            <th>Sexo</th>
            <th>Data Nascimento</th>
            <th class="text-center">AÃ§Ãµes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td>@item.Telefone</td>
                <td>@item.Endereco</td>
                <td>@item.Cidade</td>
                <td>@item.Sexo</td>
                <td>@item.DataNascimento.ToString("dd/MM/yyyy")</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a class="btn btn-sm btn-danger me-1" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash"></i> Excluir
                    </a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-eye"></i> Detalhes
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-3">
        Nenhum contato cadastrado ainda.
    </div>
}
