@model AgendaContatos.Models.Contato

<div class="card shadow-lg p-4">
    <h2 class="fw-bold text-success mb-4">
        <i class="bi bi-person-plus"></i> Novo Contato
    </h2>

    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label fw-bold"></label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="exemplo@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefone" class="form-label fw-bold"></label>
            <input asp-for="Telefone" class="form-control" placeholder="(00) 00000-0000" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Endereco" class="form-label fw-bold"></label>
            <input asp-for="Endereco" class="form-control" placeholder="Rua, NÃºmero, Bairro" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Cidade" class="form-label fw-bold"></label>
            <input asp-for="Cidade" class="form-control" placeholder="Cidade" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Sexo" class="form-label fw-bold"></label>
            <select asp-for="Sexo" class="form-select">
                <option value="">Selecione...</option>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
                <option value="Outro">Outro</option>
            </select>
            <span asp-validation-for="Sexo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DataNascimento" class="form-label fw-bold"></label>
            <input asp-for="DataNascimento" type="date" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Voltar
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Salvar
            </button>
        </div>
    </form>
</div>
